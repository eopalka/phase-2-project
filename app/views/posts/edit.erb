
<h1>Edit Post!</h1>

<form class="" action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="title">Title:</label>
  <input type="text" name="title" value ="<%= @post.title %>">
  <label for="description">Description:</label>
  <textarea name="description" style="width:auto; height:auto;"><%= @post.description %></textarea>
  <label for="image_url">Image URL:</label>
  <input type="text" name="image_url" value ="<%= @post.image_url %>">
  <input type="submit" name="" value="Edit Post">
</form>